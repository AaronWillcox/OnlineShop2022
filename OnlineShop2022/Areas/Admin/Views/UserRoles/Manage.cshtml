@using OnlineShop2022.Areas.Admin.Models
@model IEnumerable<ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Manage";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage @Model.FirstOrDefault().User.Firstname 's Roles</h2>
        </div>

        <div class="card-body">
            @foreach (var item in Model)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@item.IsInRole">
                    <label class="form-check-label">
                        @item.Role.Name
                    </label>
                </div>
            }
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Update</button>
            <a class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>